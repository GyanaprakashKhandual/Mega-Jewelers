{
  "name": "functional",
  "version": "1.0.0",
  "description": "Functional test automation with Cypress, Cucumber, Allure",
  "main": "cypress.config.js",
  "type": "commonjs",
  "scripts": {
    "test": "cypress run",
    "test:allure": "cypress run && npm run allure:report",
    "allure:report": "allure generate allure-results --clean -o allure-report && allure open"
  },
  "keywords": ["cypress", "cucumber", "allure", "bdd", "automation", "e2e"],
  "author": "Your Name",
  "license": "ISC",
  "dependencies": {
    "cypress": "^14.5.3",
    "cypress-xpath": "^2.0.1"
  },
  "devDependencies": {
    "@shelex/cypress-allure-plugin": "^2.41.2",
    "allure-commandline": "^2.34.1",
    "cypress-cucumber-preprocessor": "^4.3.1"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true,
    "stepDefinitions": "cypress/e2e/scripts"
  }
}
